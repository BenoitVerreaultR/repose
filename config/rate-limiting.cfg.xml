<?xml version="1.0" encoding="UTF-8"?>

<rate-limiting datastore="distributed/hash-ring" use-capture-groups="true" overLimit-429-responseCode="true" xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">
  
  <request-endpoint uri-regex="/api/limits/" />
  
  <limit-group id="RiotGames" groups="RiotGames" default="false">
    <limit uri="*" uri-regex=".*" http-methods="ALL" unit="SECOND" value="1000"/>
  </limit-group>
  
  <limit-group id="User_Standard" groups="User_Standard" default="true">
    <limit uri="*" uri-regex=".*" http-methods="ALL" unit="SECOND" value="0"/>
  </limit-group>
  
</rate-limiting>
